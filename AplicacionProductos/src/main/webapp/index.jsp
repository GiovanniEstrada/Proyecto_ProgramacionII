            <label for="exampleInputEmail1" class="form-label">Usuario</label>
            <input name="in_usuario" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input name="in_pwd" type="password" class="form-control" id="exampleInputPassword1">
        </div>
        <button type="submit" name="opt" value="1" class="btn btn-primary">Iniciar Sesión</button>
        <a class="btn btn-primary" href="login?opt=2">Crear Usuario</a>
    </form>
</div>

